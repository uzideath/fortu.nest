datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// =============== Enums ===============
enum Role {
  ADMIN
  USER
}

enum TransactionType {
  DEPOSIT
  WITHDRAW
  TICKET_PURCHASE
  WINNINGS
}

// =============== Models ===============

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  balance   Decimal  @default("0.00")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  tickets       Ticket[]
  groupMembers  GroupMember[]
  transactions  Transaction[]
  contributions TicketContribution[]
  refreshTokens RefreshToken[] // multiple tokens
  oauthAccounts OAuthAccount[] // for future OAuth providers

  @@map("users")
}

model RefreshToken {
  id          Int      @id @default(autoincrement())
  hashedToken String // store the hashed token
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  expiresAt   DateTime
  createdAt   DateTime @default(now())
  isRevoked   Boolean  @default(false) // mark if a token is revoked

  @@map("refresh_tokens")
}

model OAuthAccount {
  id           Int      @id @default(autoincrement())
  provider     String
  providerId   String // e.g., Google's unique ID for the user
  providerData Json? // store any additional data from the provider
  userId       Int
  user         User     @relation(fields: [userId], references: [id])
  createdAt    DateTime @default(now())

  // Ensure you canâ€™t have duplicates from the same provider
  @@unique([provider, providerId])
  @@map("oauth_accounts")
}

model Group {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  members GroupMember[]
  tickets Ticket[]

  @@map("groups")
}

model GroupMember {
  id       Int      @id @default(autoincrement())
  userId   Int
  groupId  Int
  joinedAt DateTime @default(now())

  // Relations
  user  User  @relation(fields: [userId], references: [id])
  group Group @relation(fields: [groupId], references: [id])

  // A user can be in a group only once
  @@unique([userId, groupId])
  @@map("group_members")
}

model Lottery {
  id                 Int       @id @default(autoincrement())
  name               String
  startDate          DateTime
  endDate            DateTime
  winningNumber      String?
  winningAnnouncedAt DateTime?

  // Relations
  tickets Ticket[]

  @@map("lotteries")
}

model Ticket {
  id            Int      @id @default(autoincrement())
  ticketNumber  String
  cost          Decimal  @default("0.00")
  winningAmount Decimal?
  createdAt     DateTime @default(now())

  // Foreign keys
  userId    Int?
  groupId   Int?
  lotteryId Int

  // Relations
  user          User?                @relation(fields: [userId], references: [id])
  group         Group?               @relation(fields: [groupId], references: [id])
  lottery       Lottery              @relation(fields: [lotteryId], references: [id])
  contributions TicketContribution[]
  Transaction   Transaction[]

  // Ensure each lottery/ticketNumber combination is unique
  @@unique([lotteryId, ticketNumber])
  @@map("tickets")
}

model TicketContribution {
  id                Int     @id @default(autoincrement())
  userId            Int
  ticketId          Int
  amountContributed Decimal @default("0.00")

  // Relations
  user   User   @relation(fields: [userId], references: [id])
  ticket Ticket @relation(fields: [ticketId], references: [id])

  @@map("ticket_contributions")
}

model Transaction {
  id              Int             @id @default(autoincrement())
  amount          Decimal
  transactionType TransactionType
  createdAt       DateTime        @default(now())

  // Foreign Key
  userId   Int
  ticketId Int?

  // Relations
  user   User    @relation(fields: [userId], references: [id])
  ticket Ticket? @relation(fields: [ticketId], references: [id])

  @@map("transactions")
}
